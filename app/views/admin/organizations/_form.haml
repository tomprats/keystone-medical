= form_for [:admin, @organization], html: { class: "form-horizontal" } do |f|
  .form-group
    = f.label :path, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :path, placeholder: "Path", class: "form-control"
  .form-group
    = f.label :name, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :name, placeholder: "Name", class: "form-control"
  .form-group
    = f.label :kind, class: "col-sm-2 control-label"
    .col-sm-10
      = f.select :kind, Organization.kinds, {}, class: "form-control"
  .form-group
    = f.label :website, class: "col-sm-2 control-label"
    .col-sm-10
      = f.url_field :website, placeholder: "Website", class: "form-control"
  .form-group
    = f.label :description, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_area :description, placeholder: "Description", class: "form-control"
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: "btn btn-primary"
